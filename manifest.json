{
  "manifest_version": 3,
  "name": "Zoho CRM Data Extractor",
  "version": "1.0",

  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "https://crm.zoho.in/*",
    "https://crm.zoho.com/*"
  ],

  "background": {
    "service_worker": "src/background/serviceWorker.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://crm.zoho.in/*",
        "https://crm.zoho.com/*"
      ],
      "js": [
        "dist/content/index.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "action": {
    "default_popup": "dist/src/popup/index.html"
  }
}
